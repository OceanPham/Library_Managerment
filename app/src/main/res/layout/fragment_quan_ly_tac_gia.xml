<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/decor2"
    tools:context=".fragment.QuanLyTacGiaFragment">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddTacGia"
        android:layout_width="150dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="35dp"
        android:layout_height="50dp"
        android:text="+  Thêm tác giả"
        android:textSize="14dp"
        android:layout_gravity="right"
        android:textColor="#FAFBFB"
        app:strokeWidth="2dp"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        android:drawablePadding="20dp"
        app:strokeColor="#00B0FF"
        android:backgroundTint="#624DE3"
        android:layout_marginEnd="30dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView15"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mã" />
        <TextView
            android:id="@+id/textView16"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tên tác giả" />
        <TextView
            android:id="@+id/textView17"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Giới tính" />
        <TextView
            android:id="@+id/textView14"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Action" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTacGia"
        android:background="#CFCCE6"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"/>
</LinearLayout>